@using lab1.models
@model Enrollment

<div class="container-xl px-4 mt-4">
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="card mb-4">
            <div class="card-body">
                <form asp-action="Details" asp-area="Admin" asp-controller="Enrollment">
                    <div style="margin-top:7px" class="form-group row">
                        <label asp-for="CourseID" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID" value="@Model.CourseID"></select>
                        </div>
                        <span asp-validation-for="CourseID" class="text-danger"></span>
                    </div>
                    <div style="margin-top:7px" class="form-group row">
                        <label asp-for="LearnerID" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="LearnerID" class="form-control" asp-items="ViewBag.LearnerID" value="@Model.LearnerID"></select>
                        </div>
                        <span asp-validation-for="LearnerID" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1" asp-for="Grade">Grade</label>
                        <input asp-for="Grade" class="form-control" placeholder="Enter your Grade" value="@Model.Grade">
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                    <!-- Save changes button-->
                    <input hidden class="hidden" asp-for="EnrollmentID" value="@Model.EnrollmentID">
                    <button class="btn btn-primary" type="submit">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
