@model DangKiHoc

@{
    ViewData["Title"] = "Dang Ki Hoc";
}
<div class="">
    <a asp-action="Index" asp-controller="Learner" asp-area="Admin">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
            class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd"
                d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
        </svg>
    </a>
</div>

<div class="ms-2 mx-2">
    <div>
        <h1>
            Learner: @ViewBag.Learner.FirstMidName @ViewBag.Learner.LastName
        </h1>
    </div>
    <div>
        <h2>Cac Mon Da Dang Ki</h2>
        <form asp-action="HuyDangKiMonHoc" asp-controller="Learner" asp-area="Admin" method="post">
            <input type="hidden" name="learnerID" value="@ViewBag.Learner.LearnerID" />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Course Name
                        </th>
                        <th>
                            Credits
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in ViewBag.CourseChoices)
                    {
                        <tr>
                            <td>
                                @c.Course.Title
                            </td>
                            <td>
                                @c.Course.Credits
                            </td>
                            <td>
                                <input class="form-check ajax-checkbox" type="checkbox" name="CourseId"
                                    id="course-@c.Course.CourseID" value="@c.Course.CourseID">
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="submit">
                Huy Dang Ki
            </button>
        </form>
    </div>
    <div>
        <h2>Cac Mon Chua Da Dang Ki</h2>
        <form asp-action="DangKiMonHoc" asp-controller="Learner" asp-area="Admin" method="post">
            <input type="hidden" name="learnerID" value="@ViewBag.Learner.LearnerID" />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Course Name
                        </th>
                        <th>
                            Credits
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in ViewBag.CourseDontChoice)
                    {
                        <tr>
                            <td>
                                @c.Title
                            </td>
                            <td>
                                @c.Credits
                            </td>
                            <td>
                                <input class="form-check ajax-checkbox" type="checkbox" name="CourseId"
                                    id="course-@c.CourseID" value="@c.CourseID">
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button>
                Dang Ki
            </button>
        </form>
    </div>
</div>