@using lab1.models
@model NavItem

@{
    ViewData["Title"] = "Create Student";
}

<div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-area="Admin" asp-controller="NavLeftItem" asp-action="Create" method="post" class="mt-3">
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Area" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Area" class="form-control" placeholder="Area">
            </div>
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Controller" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Controller" class="form-control" placeholder="Controller">
            </div>
            <span asp-validation-for="Controller" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Action" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Action" class="form-control" placeholder="Action">
            </div>
            <span asp-validation-for="Action" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Text" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Text" class="form-control" placeholder="Text">
            </div>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
