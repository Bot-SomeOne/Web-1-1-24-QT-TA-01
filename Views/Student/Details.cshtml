@using lab1.models
@model Student 

@{
    ViewBag.Title = "Detail";
}

<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div>
                    <form asp-action="UploadAvatar" asp-asp-controller="Student" asp-route-id="@Model.Id" enctype="multipart/form-data">
                        <div class="d-flex justify-content-center mb-4">
                        @{
                            if (Model.Avatar == null)
                            {
                                <img id="selectedAvatar" src="https://scontent.fhan9-1.fna.fbcdn.net/v/t1.30497-1/453178253_471506465671661_2781666950760530985_n.png?stp=dst-png_s480x480&_nc_cat=1&ccb=1-7&_nc_sid=136b72&_nc_ohc=IpoMLKXNR8YQ7kNvgFIF0vL&_nc_ht=scontent.fhan9-1.fna&oh=00_AYAhatwpRz3HctTcKW10ln3LXF7u25ERk7NrbBsaNWhdfA&oe=66F78BFA"
                                class="rounded-circle" style="width: 200px; height: 200px; object-fit: cover;" alt="User Photo" />
                            } else {
                                <img id="selectedAvatar" image-bytes="@Model.Avatar" 
                                class="rounded-circle" style="width: 200px; height: 200px; object-fit: cover;" alt="User Photo"
                                />
                            }
                        }
                        </div>
                        <div class="d-flex">
                            <div data-mdb-ripple-init class="btn btn-primary btn-rounded">
                                <label class="form-label text-white m-1" for="file">Choose file</label>
                                <input type="file" name="file" class="form-control d-none" id="file" onchange="displaySelectedImage(event, 'selectedAvatar')" />
                            </div>
                            <div class="m-2 d-flex justify-content-center">
                                <button class="btn btn-warning" type="submit">Upload new image</button>
                            </div>
                        </div>
                        @if (ViewBag.MessageUpLoadAvatar != null)
                        {
                            string message = "";
                            string css = "";
                            if (ViewBag.StatusUpdateAvatar) {
                                message = @ViewBag.MessageUpLoadAvatar;
                                css = "alert alert-success";
                            } else {
                                message = @ViewBag.MessageUpLoadAvatar;
                                css = "alert alert-danger";
                            }
                            <div class="@css" role="alert">
                                @message
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                    <form asp-action="Upgrade" asp-asp-controller="Student">
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="Name">Username (how your name will appear to other users on the site)</label>
                            <input name="Name" class="form-control" id="inputUsername" type="text" placeholder="Enter your username" value="@Model.Name">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="FirstName">First name</label>
                                <input name="FirstName" class="form-control" id="inputFirstName" type="text" placeholder="Enter your first name" value="TODO add in model">
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="LastName">Last name</label>
                                <input name="LastName" class="form-control" id="inputLastName" type="text" placeholder="Enter your last name" value="TODO add in model">
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="Branch">Branch</label>
                                <section class="files">
                                    <div class="form-group">
                                        @{
                                            ViewBag.AllBranches = new List<SelectListItem>() {
                                                new SelectListItem { Text = "IT", Value = "1" },
                                                new SelectListItem { Text = "BE", Value = "2" },
                                                new SelectListItem { Text = "CE", Value = "3" },
                                                new SelectListItem { Text = "EE", Value = "4" },
                                            };
                                        }
                                        <select asp-for="Branch" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Branch>()"></select>
                                    </div>
                                </section>
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="Address">Address</label>
                                <input name="Address" class="form-control" id="inputLocation" type="text" placeholder="Enter your location" value="@Model.Address">
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="Email">Email address</label>
                            <input name="Email" class="form-control" id="inputEmailAddress" type="email" placeholder="Enter your email address" value="@Model.Email">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="Phone">Phone number</label>
                                <input name="Phone" class="form-control" id="inputPhone" type="tel" placeholder="Enter your phone number" value="TODO add in model">
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="DateOfBirth">Birthday</label>
                                <input class="form-control" id="inputBirthday" type="date" name="DateOfBirth" placeholder="Enter your birthday" value="@Model.DateOfBirth">
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <input hidden class="hidden" type="text" name="Id" value="@Model.Id">
                        <button class="btn btn-primary" type="submit">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function displaySelectedImage(event, elementId) {
        const selectedImage = document.getElementById(elementId);
        const fileInput = event.target;

        if (fileInput.files && fileInput.files[0]) {
            const reader = new FileReader();

            reader.onload = function(e) {
                selectedImage.src = e.target.result;
            };

            reader.readAsDataURL(fileInput.files[0]);
        }
    }
</script>